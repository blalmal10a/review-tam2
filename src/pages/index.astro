---
import Layout from "../layouts/Layout.astro"
import Card from "../components/Card.astro"
import LanguageTabs from "../components/LanguageTabs.astro"
import InputField from "../components/InputField.astro"
---

<Layout title="Review tam tam a hmasaah dahna">
	<main>
		<h1 class="mt-7" style="font-size: 48px">Sort by no. of reviews</h1>
		<ol>
			<li>- Browse any amazon product and filter them as you wish</li>
			<li>- Copy link address (URL)</li>
			<li>- Paste the link in the input field below</li>
			<li>- Click 'open sorted' button</li>
			<li>
				- All items are now sorted such that items with the most reviews come
				first
			</li>
		</ol>
		<InputField />
		<div id="output" class="pt-3 hidden">
			<a
				id="link-button"
				class="inline-flex justify-center rounded-lg text-sm font-semibold py-3 px-4 bg-white text-teal-600"
				href=""
				target="_blank"
				><span> Open Sorted</span>
				<span class="pl-3">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						id="Layer_1"
						data-name="Layer 1"
						viewBox="0 0 24 24"
						width="20"
						height="20"
						><path
							fill="lightseagreen"
							d="M19,13.5v5c0,3.033-2.467,5.5-5.5,5.5H5.5c-3.033,0-5.5-2.467-5.5-5.5V10.5c0-3.033,2.467-5.5,5.5-5.5h5c.829,0,1.5,.671,1.5,1.5s-.671,1.5-1.5,1.5H5.5c-1.378,0-2.5,1.122-2.5,2.5v8c0,1.378,1.122,2.5,2.5,2.5H13.5c1.378,0,2.5-1.122,2.5-2.5v-5c0-.829,.671-1.5,1.5-1.5s1.5,.671,1.5,1.5ZM20.5,0h-5c-.829,0-1.5,.671-1.5,1.5s.671,1.5,1.5,1.5h3.379L8.439,13.439c-.586,.585-.586,1.536,0,2.121,.293,.293,.677,.439,1.061,.439s.768-.146,1.061-.439L21,5.121v3.379c0,.829,.671,1.5,1.5,1.5s1.5-.671,1.5-1.5V3.5c0-1.93-1.57-3.5-3.5-3.5Z"
						></path></svg
					>
				</span>
			</a>
		</div>
		<div
			class="mt-7 p-7 bg-red-400 rounded-md text-3xl hidden"
			id="error-banner"
		>
			Invalid URL. Make sure the url is from amazon
		</div>
	</main>

	<style></style>
</Layout>
